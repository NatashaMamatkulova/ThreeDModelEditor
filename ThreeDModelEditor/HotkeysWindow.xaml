<Window x:Class="ThreeDModelEditor.HotkeysWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThreeDModelEditor"
        mc:Ignorable="d"
        Title="Справка по клавишам" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="Горячие клавиши" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="Ctrl + C — Копировать выделенный объект в древе"/>
            <TextBlock Text="Ctrl + V — Вставить объекты со смещением"/>
            <TextBlock Text="Delete — Удалить выделенные объекты"/>
            <TextBlock Text="Ctrl + Z — Отменить последнее действие"/>
            <TextBlock Text="Ctrl + Shift + Z — Повторить отменённое действие"/>
            <TextBlock Text="Ctrl + Клик в сцене — Множественное выделение"/>
            <TextBlock Text="Ввод значения и кнопки NumPad — перемещение, масштаб, поворот по осям"/>
            <TextBlock Text="ПКМ по объекту в древе — Переименовать / Удалить"/>
            <TextBlock Text="Клик по галочке в древе — Скрыть объект"/>
        </StackPanel>
    </ScrollViewer>
</Window>